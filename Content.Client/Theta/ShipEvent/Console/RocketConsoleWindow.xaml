<DefaultWindow xmlns="https://spacestation14.io"
               xmlns:radarSetups="clr-namespace:Content.Client.Theta.ModularRadar.RadarSetups"
               Title="{Loc 'shipevent-rocketconsole-windowtitle'}"
               SetSize="940 680"
               MinSize="790 320">
    <GridContainer Columns="2"
                   HorizontalAlignment="Stretch"
                   Margin="5 5 5 5">
        <BoxContainer HorizontalAlignment="Left"
                      MinWidth="256"
                      MaxWidth="256"
                      Orientation="Vertical">
            <Button Name="LaunchButton" Text="{Loc 'shipevent-rocketconsole-launchbutton'}" />
            <Button Name="ResetButton" Text="{Loc 'shipevent-rocketconsole-resetbutton'}" />
        </BoxContainer>
        <BoxContainer Orientation="Vertical">
            <radarSetups:RocketModularRadar
                Name="RadarScreen"
                MouseFilter="Pass"
                Margin="4"
                HorizontalExpand="True"
                VerticalExpand="True" />
        </BoxContainer>
    </GridContainer>
</DefaultWindow>
