<DefaultWindow xmlns="https://spacestation14.io"
               Title="{Loc 'shipevent-shieldconsole-windowtitle'}"
               MinSize="200 300"
               SetSize="200 300">
    <BoxContainer Orientation="Horizontal">
        <!--<radarSetups:CircularShieldModularRadar todo: separate fucking radar states from console-specific ones, I don't want to integrate it here until then
            Name="RadarScreen"
            MouseFilter="Pass"
            Margin="4"
            HorizontalExpand="True"
            VerticalExpand="True" />-->
        <BoxContainer Orientation="Vertical">
            <Button Name="ShieldEnableButton" Text="{Loc 'shipevent-shieldconsole-enablebutton'}" />
            <RichTextLabel Name="ShieldPowerStatusLabel"/>
            <Label Text="{Loc 'shipevent-shieldconsole-anglelabel'}" />
            <SliderIntInput Name="ShieldAngleSlider" HorizontalExpand="True" MaxValue="360" />
            <Label Text="{Loc 'shipevent-shieldconsole-widthlabel'}" />
            <SliderIntInput Name="ShieldWidthSlider" HorizontalExpand="True" />
            <Label Text="{Loc 'shipevent-shieldconsole-radiuslabel'}" />
            <SliderIntInput Name="ShieldRadiusSlider" HorizontalExpand="True" />
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
