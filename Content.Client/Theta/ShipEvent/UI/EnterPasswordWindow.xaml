<DefaultWindow xmlns="https://spacestation14.io"
               Title="{Loc 'shipevent-enter-password-windowtitle'}"
               MinSize="300 130"
               SetSize="300 130">
    <BoxContainer Orientation="Vertical">
        <Label Name="PasswordLabel" Text="{Loc 'shipevent-enter-password-enterpass'}" />
        <LineEdit Name="PasswordEdit" HorizontalExpand="True" />
        <BoxContainer Orientation="Horizontal">
            <Button Name="Enter"
                    Text="{Loc 'shipevent-enter-password-enter-button'}"
                    HorizontalExpand="True"
                    HorizontalAlignment="Left" />
            <Button Name="Cancel"
                    Text="{Loc 'shipevent-enter-password-cancel-button'}"
                    HorizontalExpand="True"
                    HorizontalAlignment="Right" />
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
