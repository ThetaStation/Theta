<DefaultWindow
    xmlns="https://spacestation14.io"
    MinSize="300 100"
    Title="{Loc 'generic-warning-window-title-default'}">
    <BoxContainer Orientation="Vertical">
        <Label Name="Warning"
            Text="{Loc 'generic-warning-window-warning-default'}"
            HorizontalAlignment="Center"/>
        <BoxContainer Orientation="Horizontal">
            <Button Name="YesButton"
                    Text="{Loc 'generic-warning-window-yes-default'}"
                    HorizontalExpand="True"
                    HorizontalAlignment="Left" />
            <Button Name="NoButton"
                    Text="{Loc 'generic-warning-window-no-default'}"
                    HorizontalExpand="True"
                    HorizontalAlignment="Right" />
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
