<widgets:RadarGui xmlns="https://spacestation14.io"
                  xmlns:widgets="clr-namespace:Content.Client.UserInterface.Systems.Radar.Widgets"
                  xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                  xmlns:ui="clr-namespace:Content.Client.UserInterface.Systems.Radar.Controls"
                  MouseFilter="Ignore"
                  MinSize="160 160"
                  MaxSize="460 460">
    <PanelContainer HorizontalExpand="True" VerticalExpand="True">
        <TextureButton Name="ToggleButton"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       Scale="0.6 0.6"></TextureButton>
        <PanelContainer.PanelOverride>
            <graphics:StyleBoxFlat BackgroundColor="#00000000" />
        </PanelContainer.PanelOverride>
        <ui:SimpleRadarControl Name="Radar"
                               MouseFilter="Ignore"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch" />
    </PanelContainer>
</widgets:RadarGui>
